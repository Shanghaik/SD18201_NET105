﻿﻿﻿﻿@{
    ViewData["Title"] = "Privacy Policy";
    var result = ViewData["result"];
}
<h1>@ViewData["Title"]</h1>
<form asp-action="Privacy">
    <input class="form-control" style="width: 350px; " id="exampleFormControlInput1" name="monney"
           placeholder="Tiền bạn vay" />
    <br />
    <input class="form-control" style="width: 350px; " id="exampleFormControlInput1" name="day"
           placeholder="Ngày bạn nợ" />
    <br />
    <input class="form-control" style="width: 350px; " id="exampleFormControlInput1" name="percentage"
           placeholder="Lãi bạn chịu" />
    <br />
    <button type="submit" style="width: 350px" class="btn btn-dark">
        Báo về nhà
    </button>
</form>

@if (result != null)
{
        <h5>Bạn vừa báo về nhà như này nè</h5>
        <h3>@result</h3>
}
else
{
        <h3>Mời nhập vào tờ khai</h3>
}
<br />
<br />